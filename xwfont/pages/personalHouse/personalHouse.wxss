@import "../../component/message/message.wxss";
@import "../../comm/style/reset.wxss";
@import "../../comm/style/animation.wxss";
.film {
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx 15rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}

.film-item {
    width: 100%;
    height: 245rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
    display:flex;
}
.film-cover {
    flex: 1;
    overflow: hidden;
}
.file-intro {
    flex: 2;
    padding: 10rpx;
    text-align: center;
    position: relative;
}
.file-intro .opera-block{position: absolute;left: 0rpx;top: 0rpx;bottom: 0rpx;right: 0rpx;background: rgba(0, 0, 0, 0.5);}

.film-cover, .film-cover-img {
    width: 100%;
    height: 100%;
    background-color: #eaeaea;
    /*width: 350rpx;
    height: 508rpx;*/
}

.house-name{
    font-size: 30rpx;
    margin-top: 40rpx;
}
.house-count{color: #999999;margin-top: 20rpx;}
.add-btn{position: fixed;bottom: 20rpx;right: 10rpx;width: 100rpx;height: 100rpx;line-height: 100rpx;text-align: center; border-radius: 50%;border: 1px solid #84d9d4;box-shadow:0 5rpx 5rpx #84d9d4;font-size: 30rpx;color: #84d9d4;background: #fff;}


.film-title {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.film-tag {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.film-tag-item {
    padding: 4rpx 6rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
    box-shadow: 0 0 0 1px #ccc;
    border-top: 1px solid #fff;
    border-radius: 10rpx;
    background-color: #fafafa;
    color: #666;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}