@import "../../../styles/reset.wxss";
@import "../../../component/invitationNav/invitationNav.wxss";

page{background: #cd010d;}
.no-border{border: 0;} 
.first-img{text-align: center;margin-top:30rpx; }
.first-img .add-first-img{width: 375rpx;height: 375rpx;line-height: 375rpx;margin: 0 auto;}
.add-first-img .iconfont{font-size: 108rpx;color: #ffffff;}
.nav-item.createOrder{background-color: #a10009;}


.img-show-box{position: relative;}
.img-show-box .music-box{position: absolute;top: -14rpx;left:50%;margin-left: -202rpx; width: 400rpx;height: 400rpx;border: 1rpx solid #666;border-radius: 50%;z-index: 1;background: #000000;z-index: -1;}
.first-img image{width: 375rpx;height: 375rpx;border-radius: 50%;}
.first-img image{animation: 1.2s linear 0s normal none infinite running rotating;}


.invitation-band{background:#f3be4c;min-height: 300rpx;position: relative;margin: 30rpx;border-radius: 10rpx;overflow: hidden;padding-bottom: 200rpx;}
.invitation-band .mail_bg{height: 200rpx;position: absolute;bottom: 0rpx;display: block;border-radius: 10rpx;}

.invitation-band{font-family:Verdana, Geneva, Tahoma, sans-serif;text-align: center;font-size: 42rpx;}
.invitation-band .invitation-title{padding: 20rpx 0rpx;color: #cd010d;font-weight: bold;}
.invitation-band .invitation-title text{display: inline-block; width: 30rpx;float: left;}
.invitation-font{color: #cd010d;font-size: 36rpx;}
.invitation-font-i{color: #000000;min-width: 100rpx;display: inline-block;padding-left: 20rpx;border: 1px solid #cd010d;overflow:inherit;}
.invitation-font-i.date{width: 480rpx;text-align: left;}
.invitation-font-i.font-name{width: 212rpx;}
.invitation-font-i input{height: 48rpx;}




.wedding-photo{height: 1100rpx;}
.wedding-photo .photo-item{
    width: 340rpx;
    height: 400rpx;
    margin: 17rpx;
    float: left;
    background: rgba(0,0,0,0.7);
    text-align: center;
    position: relative;
}
.wedding-photo .photo-item .icon-close{position: absolute;right: 0rpx;top: 0rpx;color: red;font-size: 80rpx;}

.wedding-photo .photo-item .icon-add{font-size: 180rpx;color: #fff;margin-top: 110rpx;}

.contact-us{background: #f3be4c;min-height: 1200rpx;position: relative;text-align: center;}
.contact-us .contact-bottom-bg{position: absolute;bottom: 102rpx;left: -1rpx;}
.contact-us .contact-show{margin: 50rpx 0rpx;color: #cd010d;font-size: 38rpx;}
.contact-us button{width: 50%;margin-top: 20rpx;background: #cd010d;}


.address-location{color: #ffffff;text-indent: 30rpx;padding-top:50rpx; padding-bottom: 88rpx;}
.address-location .address-map{width: 90%;margin: 20rpx auto;height: 320rpx;}
.address-location button{width: 60%;margin-top: 30rpx;margin-bottom: 50rpx; background: #a10009;}

.address-location .invitation-font-i{border: 1px solid #fff;}

.location-address {
    padding: 20rpx;
    text-align: center;
    font-size: 30rpx;
}

.location-coord {
    font-size: 24rpx;
    text-align: center;
    color: #ccc;
}

.location-refresh {
    width: 600rpx;
    margin-top: 60rpx;
}