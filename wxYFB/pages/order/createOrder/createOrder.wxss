.no-goods{padding: 50rpx;margin-top: 200rpx;text-align: center;}

.upload{text-align: center;margin-top: 36rpx;}
.upload .iconfont{font-size: 96rpx;}

.order-title{padding: 30rpx;font-size: 32rpx;background-color: #fff;}
.order-title .other{font-size: 24rpx;color: #999;margin-top: 6rpx;}

.order-images{padding:0rpx 0rpx 30rpx 30rpx;background-color: #fff;border-bottom: 1rpx solid #e5e5e5;}
.order-images image{width: 160rpx;height: 160rpx;float: left;margin-right: 19rpx;}
.order-images .icon-close_light{color: red;font-weight: bold;position: absolute;right: -2rpx;top:-10rpx;font-size: 0rpx;height: 28rpx;width: 28rpx;z-index: 999;}
.order-images .icon-close_light image{width: 100%;height: 100%;position: absolute;}
.add-image{border: 2rpx solid #e5e5e5;width: 160rpx;height: 160rpx;float: left;text-align: center;font-size: 24rpx;color: #999;border-radius: 2rpx;margin: 4rpx;}
.add-image .icon-add{font-size: 100rpx;margin: 10rpx;color: #e5e5e5;margin-bottom: 2rpx;}