@import "../../../styles/reset.wxss";
@import "../../../styles/fontic.wxss";
@import "../../../component/nav/nav.wxss";
@import "../../../component/message/message.wxss";

.change-time{padding:0rpx 30rpx;line-height: 80rpx;}
.change-time image{width: 34rpx;height: 33rpx;}
.order-total{display: flex;padding: 30rpx 0rpx;background-color: #fff;border-top: 1px solid #e5e5e5;border-bottom: 1px solid #e5e5e5;}
.order-total .item{flex: 1;text-align: center;border-right: 1px solid #ddd;font-size: 30rpx;}
.order-total .item:last-child{border-right: 0px solid #ddd;}
.order-total .item .item-value{font-size: 36rpx;margin-top: 2rpx;color: #00aaee;}
.order-total .item .item-value text{font-size: 26rpx;}

.data-list{padding: 30rpx;background-color: #fff;margin-top: 20rpx;padding-bottom: 0;border-bottom: 1px solid #e5e5e5;}
.data-list .data-item:last-child{border-bottom: 0px solid #e5e5e5;}
.data-item{border-bottom: 1rpx solid #e5e5e5;font-size: 28rpx;padding: 30rpx 0rpx;}
.data-item image{width: 140rpx;height: 140rpx;float: left;margin-right: 30rpx;}
.data-item .data-info{float: left;width: 340rpx;}
.data-item .data-info .data-count{color: #999;font-size: 24rpx;margin-top: 70rpx;}
.data-item .data-opra{float: right;}
.data-item .data-opra .to-pay{background: #00aaee;color: #fff;padding: 10rpx 18rpx;border-radius: 5rpx;}


.select-date{text-align:center; width: 100%; height: 200px;position: fixed;bottom: 0;left: 0;z-index: 1;background-color: #fff;}
.select-date .finish-btn{position: absolute;z-index: 9992;color: #00aaee;right: 20rpx;top: 20rpx;}